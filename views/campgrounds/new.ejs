<%- include("../partials/header") -%> 
<div class="container">
    <div class="row">
        <h1 style="text-align: center;"  class="alert alert-info">Add New Campground</h1>
        <div style="width: 30%; margin: 30 auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label class="form-control" for="name">Enter Name: </label>
                    <input class="form-control" type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <label class="form-control" for="name">Enter Price: </label>
                    <input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01" >
                </div>
                <div class="form-group">
                    <label class="form-control" for="img">Enter Image Url: </label>
                    <input class="form-control" type="text" name="img" placeholder="Image Url">
                </div>
                <div class="form-group">
                    <label class="form-control" for="description">Description: </label>
                    <input class="form-control" type="text" name="description" placeholder="Add Description">
                </div>
                <div class="from-group">
                    <button class="btn btn-lg btn-success btn-block">Submit</button>
                </div>
            </form>
            <a class="btn btn-info" href="/campgrounds">Go back</a>
        </div>
        
    </div>
</div>
<%- include("../partials/footer") -%> 