<%- include("../partials/header") -%> 



<div class="container-fluid">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p class="text-danger">Here are some awesome places from India.</p>
            <p><a class="btn btn-primary" href="/campgrounds/new">Add new grounds</a></p>
        </div>

    </header>
    <div class="row">
        <% for(var i=0;i<campgrounds.length;i++){ %>
            <div class="col-md-3 col-sm-6"> 
                
                <div class="thumbnail">
                    <img src="<%= campgrounds[i].image %> " class="card-img-top" >
                    <div class="caption">
                        <h2><%= campgrounds[i].name %> </h2>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campgrounds[i]._id %> " class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% } %>  
    </div>
</div>
<%- include("../partials/footer") -%> 